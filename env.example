# --- General Application Settings ---
# ENABLE_API: Set to "false" to disable the HTTP API interface
ENABLE_API="true"
# ENABLE_ARI: Set to "false" to disable the Asterisk ARI interface
ENABLE_ARI="true"
# ENABLE_SOCKET_SERVER: Set to "false" to disable the UNIX Socket interface
ENABLE_SOCKET_SERVER="true"
# DEFAULT_INTENT: Intent to assume if no intent is provided in the request (e.g., "intent_schedule_appointment")
# Leave empty to not assume any default intent.
DEFAULT_INTENT="intent_schedule_appointment"

# --- API Server Settings (if ENABLE_API is "true") ---
# PORT: Port on which the API server will listen
PORT=3000

# --- UNIX Socket Server Settings (if ENABLE_SOCKET_SERVER is "true") ---
# FSM_SOCKET_PATH: Filesystem path for the UNIX domain socket
FSM_SOCKET_PATH="/tmp/fsm_service.sock"

# --- Redis Connection Settings ---
# REDIS_HOST: Hostname or IP address of the Redis server
REDIS_HOST="127.0.0.1"
# REDIS_PORT: Port of the Redis server
REDIS_PORT=6379
# REDIS_PASSWORD: Password for Redis authentication (leave blank if none)
REDIS_PASSWORD=
# REDIS_DB: Redis database number (optional, defaults to 0)
REDIS_DB=0
# REDIS_SESSION_TTL: Time-to-live for session data in Redis, in seconds. (e.g., 3600 for 1 hour, 86400 for 24 hours).
# Leave empty or set to 0 for no expiration.
REDIS_SESSION_TTL=3600

# --- Asterisk ARI Connection Settings (if ENABLE_ARI is "true") ---
# ARI_APP_NAME: The name of the Stasis application to register with Asterisk
ARI_APP_NAME="fsm-ari-app"
# ARI_URL: Full URL to the Asterisk ARI HTTP interface (e.g., http://localhost:8088 or http://asterisk_ip:8088)
ARI_URL="http://localhost:8088"
# ARI_USERNAME: Username for ARI authentication
ARI_USERNAME="ariuser"
# ARI_PASSWORD: Password for ARI authentication
ARI_PASSWORD="aripass"
